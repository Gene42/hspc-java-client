<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd"
       default-lazy-init="false">

    <!-- Configuration properties location -->
    <context:property-placeholder location="classpath:config/config.properties"/>

    <bean id="webAuthorizer" class="org.hspconsortium.client.auth.codeflow.CodeFlowAuthorizer">
    </bean>

    <bean id="clientId" class="java.lang.String">
        <constructor-arg value="${example.clientId}"/>
    </bean>

    <bean id="scope" class="java.lang.String">
        <constructor-arg value="${example.scopes}"/>
    </bean>

    <bean id="authRedirectUri" class="java.lang.String">
        <constructor-arg value="${example.authRedirectUri}"/>
    </bean>

</beans>